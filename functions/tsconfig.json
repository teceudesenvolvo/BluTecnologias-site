{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
  "sourceMap": true,
  "strict": true,
  "skipLibCheck": true,
  "lib": ["es2022", "esnext"],
    "target": "es2022"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "index.ts",
    "**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}